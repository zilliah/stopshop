 {
    "name": "Shop Stop",
    "description" : "Mindfulness Tool for Online Shopping",
    "version": "0.0",
    "manifest_version": 2, 
    "icons": { 
      "16": "img/ss-icon16.png",
      "24": "img/ss-icon24.png",
      "32" : "img/ss-icon32.png",
      "48" : "img/ss-icon48.png",
      "128": "img/ss-icon128.png" 
    },
    "background": {
      "scripts": ["stopshop.js"],
      "persistent": true
    },
    "browser_action": {
      "default_icon": {
        "16": "img/ss-icon16.png",
        "24": "img/ss-icon24.png",
        "32" : "img/ss-icon32.png",
        "48" : "img/ss-icon48.png",
        "128": "img/ss-icon128.png"
      },
      "default_title": "Stop Shop \nClick to add this page as a cart"
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "http://*/*", 
      "https://*/*"
    ]

  }